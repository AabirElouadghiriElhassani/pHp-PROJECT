{% extends 'base.html.twig' %}
{% block title %}User Profile{% endblock %}

{% block body %}
<a href="/users" class="text-secondary text-decoration-none mb-4 d-inline-block">
    ‚Üê Back to users
</a>

<div class="lux-card p-5 mt-3">
    <h2 class="mb-3">User Profile</h2>

    <div class="row mt-4">
        <div class="col-md-6">
            <p class="text-secondary mb-1">User ID</p>
            <p class="fs-5">{{ userId }}</p>
        </div>

        <div class="col-md-6">
            <p class="text-secondary mb-1">Email</p>
            <p class="fs-5">user{{ userId }}@cinema.com</p>
        </div>
    </div>

    <div class="mt-4">
        <p class="text-secondary mb-1">Role</p>
        <span class="badge bg-warning text-dark px-3 py-2">
            Premium User
        </span>
    </div>
</div>
{% endblock %}





