{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="lux-card">
    <h2 class="mb-3">Dashboard</h2>

    <p class="text-muted">
        Welcome to your personal dashboard.
        Here you can manage your activity and reservations.
    </p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="p-3 border rounded">
                <h6 class="text-secondary">Reservations</h6>
                <p class="fs-4 fw-semibold mb-0">12</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-3 border rounded">
                <h6 class="text-secondary">Favorite Format</h6>
                <p class="fs-5 mb-0">IMAX</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-3 border rounded">
                <h6 class="text-secondary">Account Status</h6>
                <p class="fs-5 mb-0 text-success">Active</p>
